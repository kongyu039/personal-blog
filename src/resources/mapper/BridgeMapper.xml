<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pvt.example.mapper.BridgeMapper">
  <!-- 插入中间表 分类_文章 -->
  <insert id="insertCategoryPost" parameterType="pvt.example.pojo.dto.PostRequest" keyProperty="id,categoryId">
    INSERT INTO categories_posts
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">post_id,</if>
      <if test="categoryId != null">category_id,</if>
    </trim>
    VALUES
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">#{id},</if>
      <if test="categoryId != null">#{categoryId},</if>
    </trim>
  </insert>
  <!-- 插入中间表 标签_文章 -->
  <insert id="insertTagPost" parameterType="pvt.example.pojo.dto.PostRequest">
    INSERT INTO tags_posts (tag_id, post_id)
    VALUES
    <foreach collection="tagIds" item="tagId" separator=",">
      (#{tagId}, #{id})
    </foreach>
  </insert>
  <delete id="delCategoryPostByPostId">
    DELETE FROM categories_posts
    WHERE post_id IN
    <foreach collection="array" item="id" open="(" separator="," close=")">
      #{id}
    </foreach>
  </delete>
  <delete id="delCategoryPostByCategoryId">
    DELETE FROM categories_posts
    WHERE category_id IN
    <foreach collection="array" item="id" open="(" separator="," close=")">
      #{id}
    </foreach>
  </delete>
  <delete id="delTagPostByPostId">
    DELETE FROM tags_posts
    WHERE post_id IN
    <foreach collection="array" item="id" open="(" separator="," close=")">
      #{id}
    </foreach>
  </delete>
  <delete id="delTagPostByTagId">
    DELETE FROM tags_posts
    WHERE tag_id IN
    <foreach collection="array" item="id" open="(" separator="," close=")">#{id}</foreach>
  </delete>
  <update id="uploadCategoryPostByCategoryIdToZero">
    UPDATE categories_posts
    SET category_id = 0
    WHERE category_id IN
    <foreach collection="array" item="id" open="(" separator="," close=")">#{id}</foreach>
  </update>
</mapper>